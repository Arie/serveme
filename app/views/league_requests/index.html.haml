%h2 Search results

.row
  .col-md-12
    %table.table.table-condensed
      %thead
        %tr
          %th Reservation ID
          %th Start time
          %th End time
          %th IP
          %th Name
          %th Steam ID
      - @results.each do |result|
        %tr
          %td= link_to(result.reservation_id, player_statistics_path(reservation_id: result.reservation_id))
          %td= I18n.l(result.reservation.starts_at,  :format => :long)
          %td= I18n.l(result.reservation.ends_at,  :format => :long)
          %td= link_to(result.ip, league_request_path(ip: result.ip))
          %td= result.name
          %td= link_to(result.steam_uid, league_request_path(steam_uid: result.steam_uid))

