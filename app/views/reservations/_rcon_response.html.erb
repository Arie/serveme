<div class="rcon-response" data-controller="rcon-response">
  <div class="rcon-response-header">
    <span class="rcon-response-command"><%= command %></span>
    <div class="rcon-response-actions">
      <button type="button" class="rcon-response-copy" data-action="click->rcon-response#copy" data-rcon-response-target="copyButton" aria-label="Copy">&#x2398;</button>
      <button type="button" class="rcon-response-close" data-action="click->rcon-response#close" aria-label="Close">&times;</button>
    </div>
  </div>
  <pre class="rcon-response-body" data-rcon-response-target="body"><%= result %></pre>
</div>
