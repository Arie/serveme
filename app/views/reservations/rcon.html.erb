<%= turbo_stream_from "reservation_#{@logsecret}_log_lines" %>
<div class="row">
  <div class="col-md-12">
    <% if @reservation.now? %>
      <%= simple_form_for(@reservation, url: url_for(controller: "reservations", action: "rcon_command"), html: { class: "form-inline rcon-command"}, data: { controller: "rcon", action: "turbo:submit-end->rcon#reset" }) do |f| %>
        <%= f.input :rcon_command, label: false, placeholder: "RCON command (e.g., changelevel cp_badlands)", class: "col-md-12 form-control required", autofocus: true %>
        <%= submit_tag "Send", name: "commit", class: "btn btn-primary" %>
      <% end %>
    <% end %>
    <br />
    <pre class="web-rcon-log-lines" id="<%= "reservation_#{@logsecret}_log_lines" %>">
<% @log_lines.each do |line| %><%= render "reservations/log_line", log_line: line %><% end %>
    </pre>
  </div>
</div>