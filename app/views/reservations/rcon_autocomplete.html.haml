%ul.rcon-autocomplete{data: { controller: "suggestions-results", "suggestions-results-current-class": "current-result" }}
  - if @suggestions.any?
    - @suggestions.each do |suggestion|
      - unless @query.strip == suggestion[:command] && @suggestions.size == 1
        %li{data: { action: "click->suggestions#fillInput", suggestion: suggestion[:command], "suggestions-results-target": "result" } }
          %div{data: { suggestion: suggestion[:command], action: "click->suggestions#fillInput" }}
            .command= suggestion[:display_text] || suggestion[:command]
            - if suggestion[:description].present?
              .description= suggestion[:description]
