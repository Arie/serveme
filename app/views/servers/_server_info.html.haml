- reservation = server.current_reservation
- statistic = server.recent_server_statistics.last&.decorate
%tr
  %td
    = server.name.html_safe

  - if statistic
    %td
      %span.map-name-compact{data: {bs_toggle: "tooltip", bs_placement: "top"}, title: statistic.map_name}= statistic.map_name
    %td= statistic.number_of_players
    %td= statistic.fps
    %td.actions
      = "#{server.inactive_minutes} minutes"
  - else
    - if reservation
      %td{colspan: 3} N/A
      %td.actions
    - else
      %td{colspan: 4} Idle

