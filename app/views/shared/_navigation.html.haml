.navbar.navbar-inverse
  .navbar-inner
    .container
      %ul.nav
        %li= link_to("Serveme", root_path, :class => 'brand')
        - if current_user
          %li.dropdown
            %a.dropdown-toggle{:data => {:toggle => "dropdown"}, :href => "#"}
              Reservations
              %b.caret>
            %ul.dropdown-menu
              %li= link_to("Your reservations",   reservations_path)
              %li= link_to("Recent reservations", recent_reservations_pages_path)
        - else
          %li= link_to("Recent reservations",     recent_reservations_pages_path)
        %li.dropdown
          %a.dropdown-toggle{:data => {:toggle => "dropdown"}, :href => "#"}
            Servers
            %b.caret>
          %ul.dropdown-menu
            %li= link_to("List",                  servers_pages_path)
            %li= link_to("Providers",             server_providers_pages_path)
        %li= link_to("FAQ",                       faq_pages_path)
        %li= link_to("Statistics",                statistics_pages_path)
        %li= link_to("Credits",                   credits_pages_path)
        - if current_user
          %li= link_to "Settings",                edit_users_path
      .pull-right
        .account
          - if current_user
            Hello
            = link_to current_user.nickname, edit_users_path
            |
            = link_to "logout", users_logout_path, :method => :delete
          - else
            = link_to '/users/auth/steam' do
              = image_tag 'sits_small.png', :alt => "Sign in with Steam"
